{
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
  },
  "ts-node": {  "files": true },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
